<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient">

    <!-- 內容區：上方標題 + 副標 + 列表 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:layout_marginTop="30dp"
        android:paddingEnd="20dp"
        android:paddingTop="20dp">

        <!-- 標題（可留可拿掉，若你已有 Toolbar 就刪這兩個 TextView） -->
        <TextView
            android:id="@+id/tvPageTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="訓練計畫"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="點選復健項目開始你的訓練"
            android:textAlignment="center"
            android:textColor="@color/text_primary"
            android:textSize="16sp" />


        <!-- ✅ 保留 id，不動 PlanFragment / Adapter  -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPlans"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="16dp"/>
        <!-- 底部預留空間避免被 FAB / 底部導覽擋住 -->
    </LinearLayout>

    <!-- 右下黃圓加號 FAB（若要用 Button 就把這段改成 Button） -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddPlan"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="20dp"
        app:layout_anchorGravity="bottom|end"
        app:layout_anchor="@id/rvPlans"
        app:backgroundTint="#FFC107"
        app:tint="@android:color/black"
        app:borderWidth="0dp"
        app:srcCompat="@drawable/ic_add_24"
        android:contentDescription="新增"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
