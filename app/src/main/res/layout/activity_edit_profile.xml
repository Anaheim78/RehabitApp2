<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pageRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient">

    <!-- 標題 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="個人資料"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 表單卡片 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp">

            <!-- Row：ID -->
            <LinearLayout
                android:id="@+id/rowId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp">

                <!-- LabelContainer（置中） -->
                <FrameLayout
                    android:id="@+id/idLabelContainer"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_field_label">

                    <TextView
                        android:id="@+id/labelId"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="ID"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                </FrameLayout>

                <!-- InputContainer -->
                <LinearLayout
                    android:id="@+id/idInputContainer"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_field_input"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvIdReadonly"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tmutmu"
                        android:textSize="14sp"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Row：e-mail -->
            <LinearLayout
                android:id="@+id/rowEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp">

                <FrameLayout
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_field_label">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="e-mail"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_field_input"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="name@example.com"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Row：姓名 -->
            <LinearLayout
                android:id="@+id/rowName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp">

                <FrameLayout
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_field_label">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="姓名"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_field_input"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="請輸入姓名"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Row：生日 -->
            <LinearLayout
                android:id="@+id/rowBirthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="12dp">

                <FrameLayout
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_field_label">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="生日"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/bg_field_input"
                    android:paddingHorizontal="12dp"
                    android:gravity="center_vertical">
                    <EditText
                        android:id="@+id/etBirthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="YYYY/MM/DD"
                        android:inputType="date"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Row：性別（滑軌）-->
            <LinearLayout
                android:id="@+id/rowGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp">

                <FrameLayout
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_field_label">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="性別"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"/>
                </FrameLayout>

                <!-- GenderSegment（外容器） -->
                <FrameLayout
                    android:id="@+id/genderSegment"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:background="@drawable/segment_track">

                    <!-- 滑塊 -->
                    <View
                        android:id="@+id/genderThumb"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="start"
                        android:background="@drawable/segment_thumb"/>

                    <!-- 文字（左右兩段，點擊可切換） -->
                    <LinearLayout
                        android:id="@+id/genderLabels"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tvMale"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="男生"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/tvFemale"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="女生"
                            android:textSize="14sp"
                            android:textColor="@android:color/black"
                            android:clickable="true"
                            android:focusable="true"/>
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 底部確認按鈕 -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="153dp"
        android:layout_height="44dp"
        android:text="確認"
        android:textSize="13sp"
        android:background="@drawable/btn_login"
        app:layout_constraintTop_toBottomOf="@id/formCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
