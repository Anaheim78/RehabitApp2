<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pageRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_gradient">

    <!-- 標題 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:text="個人資料"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 表單區 -->
    <LinearLayout
        android:id="@+id/formContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row：Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <!-- Label (純黑字，無白塊) -->
            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="e-mail"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Input 白框 -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_field_input"
                android:paddingHorizontal="8dp"
                android:hint="name@example.com"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Row：姓名 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="姓名"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_field_input"
                android:paddingHorizontal="8dp"
                android:hint="請輸入姓名"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Row：生日 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="生日"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etBirthday"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@drawable/bg_field_input"
                android:paddingHorizontal="8dp"
                android:hint="YYYY/MM/DD"
                android:inputType="date"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Row：性別（滑塊） -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="性別"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Segment 外框 -->
            <FrameLayout
                android:id="@+id/genderSegment"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@drawable/segment_track">

                <!-- Thumb 滑塊 -->
                <View
                    android:id="@+id/genderThumb"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:background="@drawable/segment_thumb" />

                <!-- 左右文字 -->
                <LinearLayout
                    android:id="@+id/genderLabels"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvMale"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="男生"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvFemale"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="女生"
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- 底部確認按鈕 -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:text="確認"
        android:textSize="14sp"
        android:background="@drawable/btn_login"
        app:layout_constraintTop_toBottomOf="@id/formContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="32dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
