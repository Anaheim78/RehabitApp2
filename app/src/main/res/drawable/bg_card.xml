<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!--用在個人資料底下關於APP-->
    <!-- 半透明白色 -->
    <solid android:color="#4DFFFFFF" />
    <!-- #CCFFFFFF = 白色 (FF) + 透明度 0xCC (約 80% 不透明) -->

    <!-- 圓角 -->
    <corners android:radius="16dp" />

    <!-- 陰影/外框 (可選) -->
    <stroke
        android:width="1dp"
        android:color="#22000000" />
</shape>
