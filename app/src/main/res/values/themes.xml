<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.RehabilitationApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- ✅ Primary brand color. -->
        <item name="colorPrimary">@color/brand_primary</item>                     <!-- 主色 -->
        <item name="colorPrimaryVariant">@color/brand_primary_dark</item>         <!-- 深主色 -->
        <item name="colorOnPrimary">@color/text_invert</item>                     <!-- 主色上的文字 -->

        <!-- ✅ Secondary brand color. -->
        <item name="colorSecondary">@color/brand_secondary</item>                 <!-- 次色 -->
        <item name="colorSecondaryVariant">@color/brand_primary_light</item>      <!-- 淡變體 -->
        <item name="colorOnSecondary">@color/text_primary</item>                  <!-- 次色上的文字 -->

        <!-- ✅ Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>   <!-- 狀態列顏色 -->

        <!-- ✅ Background (整體表面用色，非必要，但可強制全域背景色統一) -->
        <item name="android:windowBackground">@color/surface_default</item>       <!-- 全域背景色（米白） -->

        <item name="android:colorControlNormal">@null</item>
        <item name="android:colorControlActivated">@null</item>
        <!-- 其他可自定義項目可視需求擴充 -->
    </style>

</resources>
