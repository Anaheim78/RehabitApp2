    <!-- ✅ 品牌色系（主湖綠清新，避免高對比與 burn-in） -->
    <color name="brand_primary">#FFDA73</color>              <!-- 主色（湖綠） -->
    <color name="brand_secondary">#C8E1DA</color>            <!-- 次色（淡湖綠） -->
    <color name="brand_primary_dark">#4A9B87</color>         <!-- 深色變體（for status bar、按下時） -->
    <color name="brand_primary_light">#B8D5CE</color>        <!-- 淡色變體（卡片底色等） -->

    <!-- ✅ 文字顏色 -->
    <color name="text_primary">#1A1A1A</color>               <!-- 主文字：非純黑，減少殘影 -->
    <color name="text_secondary">#5E5E5E</color>             <!-- 次文字：中灰，輔助說明文字 -->
    <color name="text_invert">#F8F8F8</color>                <!-- 較柔的白色，用於深底文字 -->

    <!-- ✅ 圖標顏色 -->
    <color name="icon_default">#2C2C2C</color>
    <color name="icon_secondary">#666666</color>
    <color name="icon_invert">#FFFFFF</color>

    <!-- ✅ 背景 / 表面 -->
    <color name="surface_default">#F4F1EC</color>            <!-- 米白背景，主要底色 -->
    <color name="surface_dark">#E5E2DD</color>              <!-- 略深背景，用於卡片/分隔 -->
    <color name="surface_white">#FFFFFF</color>              <!-- 純白，可搭配陰影使用 -->

    <!-- ✅ 狀態顏色（圓框校正） -->
    <color name="status_aligning">#FFEB3B</color>            <!-- 黃色圓框：對準中 -->
    <color name="status_active">#4CAF50</color>              <!-- 綠色圓框：校正成功 -->
    <color name="status_error">#F44336</color>               <!-- 紅色圓框：偏移、錯誤 -->

    <!-- ✅ 功能按鈕色 -->
    <color name="button_primary">#5FB4A0</color>
    <color name="button_primary_pressed">#4A9B87</color>

    <!-- ✅ UX登入頁功能按鈕色 -->
